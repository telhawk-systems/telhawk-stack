# TelHawk Stack - TLS/HTTPS Configuration Example
# Copy this file to .env and customize for your environment

# =============================================================================
# TLS/HTTPS CONFIGURATION
# =============================================================================

# Enable HTTPS/TLS for all Go services (default: false)
# Set to "true" to enable HTTPS with self-signed or production certificates
AUTH_TLS_ENABLED=false
INGEST_TLS_ENABLED=false
CORE_TLS_ENABLED=false
STORAGE_TLS_ENABLED=false
QUERY_TLS_ENABLED=false
WEB_TLS_ENABLED=false

# Skip TLS certificate verification (default: false)
# Set to "true" for development with self-signed certificates
# IMPORTANT: Must be "false" in production!
AUTH_TLS_SKIP_VERIFY=false
CORE_TLS_SKIP_VERIFY=false
STORAGE_TLS_SKIP_VERIFY=false
QUERY_TLS_SKIP_VERIFY=false

# Service URLs - update to https:// when TLS is enabled
# INGEST_AUTH_URL=https://auth:8080
# INGEST_CORE_URL=https://core:8090
# INGEST_STORAGE_URL=https://storage:8083
# CORE_STORAGE_URL=https://storage:8083
# WEB_AUTH_SERVICE_URL=https://auth:8080
# WEB_QUERY_SERVICE_URL=https://query:8082
# WEB_CORE_SERVICE_URL=https://core:8090

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL password for auth database
AUTH_DB_PASSWORD=telhawk-auth-dev

# OpenSearch credentials
OPENSEARCH_ADMIN_USER=admin
OPENSEARCH_PASSWORD=TelHawk123!

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT secret for token signing (CHANGE IN PRODUCTION!)
AUTH_JWT_SECRET=change-this-in-production

# HEC token for auth service to send audit logs to ingest
# AUTH_INGEST_HEC_TOKEN=

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================

# Enable secure cookies (requires HTTPS)
COOKIE_SECURE=false

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Full HTTPS Stack (Development with self-signed certs)
# Uncomment the following lines:
#
# AUTH_TLS_ENABLED=true
# INGEST_TLS_ENABLED=true
# CORE_TLS_ENABLED=true
# STORAGE_TLS_ENABLED=true
# QUERY_TLS_ENABLED=true
# WEB_TLS_ENABLED=true
# AUTH_TLS_SKIP_VERIFY=true
# CORE_TLS_SKIP_VERIFY=true
# STORAGE_TLS_SKIP_VERIFY=true
# INGEST_AUTH_URL=https://auth:8080
# INGEST_CORE_URL=https://core:8090
# INGEST_STORAGE_URL=https://storage:8083
# CORE_STORAGE_URL=https://storage:8083
# WEB_AUTH_SERVICE_URL=https://auth:8080
# WEB_QUERY_SERVICE_URL=https://query:8082
# WEB_CORE_SERVICE_URL=https://core:8090

# Example 2: Production Configuration
# Use production certificates and strict verification:
#
# AUTH_TLS_ENABLED=true
# INGEST_TLS_ENABLED=true
# CORE_TLS_ENABLED=true
# STORAGE_TLS_ENABLED=true
# QUERY_TLS_ENABLED=true
# WEB_TLS_ENABLED=true
# AUTH_TLS_SKIP_VERIFY=false
# CORE_TLS_SKIP_VERIFY=false
# STORAGE_TLS_SKIP_VERIFY=false
# COOKIE_SECURE=true
# OPENSEARCH_PASSWORD=<strong-production-password>
# AUTH_DB_PASSWORD=<strong-production-password>
# AUTH_JWT_SECRET=<strong-production-secret>
