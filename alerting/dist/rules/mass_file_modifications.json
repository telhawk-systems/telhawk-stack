{
  "name": "mass_file_modifications",
  "description": "Detects mass file modification activity which may indicate ransomware encryption, file corruption, or malicious activity",
  "model": {
    "correlation_type": "event_count",
    "parameters": {
      "time_window": "5m",
      "query": {
        "filter": {
          "type": "and",
          "conditions": [
            {
              "field": ".class_uid",
              "operator": "eq",
              "value": 4006
            },
            {
              "field": ".activity_id",
              "operator": "in",
              "value": [3, 4]
            }
          ]
        }
      },
      "threshold": {
        "value": 100,
        "operator": "gte"
      },
      "group_by": [".actor.user.name", ".device.hostname"]
    }
  },
  "view": {
    "title": "Mass File Modification Detected",
    "severity": "critical",
    "description": "User {{actor.user.name}} on host {{device.hostname}} modified/deleted {{event_count}} files in 5 minutes - potential ransomware or data destruction",
    "category": "Impact",
    "tags": ["ransomware", "file-modification", "mass-deletion", "data-destruction", "impact"],
    "mitre_attack": {
      "tactics": ["Impact"],
      "techniques": [
        "T1486 - Data Encrypted for Impact",
        "T1485 - Data Destruction",
        "T1490 - Inhibit System Recovery"
      ]
    }
  },
  "controller": {
    "detection": {
      "suppression_window": "30m"
    },
    "response": {
      "actions": [],
      "severity_threshold": "critical"
    }
  }
}
