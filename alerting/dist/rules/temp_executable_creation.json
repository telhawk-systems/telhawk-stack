{
  "name": "temp_executable_creation",
  "description": "Detects creation of executable files in temporary directories which may indicate malware staging or dropper activity",
  "model": {
    "correlation_type": "event_count",
    "parameters": {
      "time_window": "15m",
      "query": {
        "filter": {
          "type": "and",
          "conditions": [
            {
              "field": ".class_uid",
              "operator": "eq",
              "value": 4006
            },
            {
              "field": ".activity_id",
              "operator": "eq",
              "value": 1
            },
            {
              "field": ".file.path",
              "operator": "contains",
              "value": "/tmp/"
            }
          ]
        }
      },
      "threshold": {
        "value": 5,
        "operator": "gte"
      },
      "group_by": [".device.hostname"]
    }
  },
  "view": {
    "title": "Executable Created in Temp Directory",
    "severity": "high",
    "description": "Host {{device.hostname}} created {{event_count}} files in temporary directory - potential malware staging or dropper activity",
    "category": "Execution",
    "tags": ["malware", "dropper", "temp-directory", "staging", "execution"],
    "mitre_attack": {
      "tactics": ["Execution", "Defense Evasion"],
      "techniques": [
        "T1204.002 - User Execution: Malicious File",
        "T1105 - Ingress Tool Transfer",
        "T1027 - Obfuscated Files or Information"
      ]
    }
  },
  "controller": {
    "detection": {
      "suppression_window": "30m"
    },
    "response": {
      "actions": [],
      "severity_threshold": "high"
    }
  }
}
