{
  "name": "mass_account_creation",
  "description": "Detects rapid creation of multiple user accounts, indicating potential persistence establishment or privilege abuse",
  "model": {
    "correlation_type": "event_count",
    "parameters": {
      "time_window": "10m",
      "query": {
        "filter": {
          "type": "and",
          "conditions": [
            {
              "field": ".class_uid",
              "operator": "eq",
              "value": 3001
            },
            {
              "field": ".activity_id",
              "operator": "eq",
              "value": 1
            }
          ]
        }
      },
      "threshold": {
        "value": 5,
        "operator": "gte"
      },
      "group_by": [".actor.user.name"]
    }
  },
  "view": {
    "title": "Mass Account Creation Detected",
    "severity": "high",
    "description": "User {{actor.user.name}} created {{event_count}} accounts in the last 10 minutes, indicating potential persistence or backdoor establishment",
    "category": "Account Management",
    "tags": ["account-creation", "persistence", "backdoor", "privilege-abuse"],
    "mitre_attack": {
      "tactics": ["Persistence"],
      "techniques": ["T1136.001 - Create Account: Local Account", "T1136.002 - Create Account: Domain Account"]
    }
  },
  "controller": {
    "detection": {
      "suppression_window": "20m"
    },
    "response": {
      "actions": [],
      "severity_threshold": "high"
    }
  }
}
