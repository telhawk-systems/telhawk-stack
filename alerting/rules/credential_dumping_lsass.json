{
  "name": "credential_dumping_lsass",
  "description": "Detects attempts to access LSASS process memory for credential dumping, including common tools like Mimikatz, ProcDump, and Comsvcs.dll",
  "model": {
    "correlation_type": "event_count",
    "parameters": {
      "time_window": "5m",
      "query": {
        "filter": {
          "type": "and",
          "conditions": [
            {
              "field": ".class_uid",
              "operator": "eq",
              "value": 1007
            },
            {
              "type": "or",
              "conditions": [
                {
                  "type": "and",
                  "conditions": [
                    {
                      "field": ".process.name",
                      "operator": "in",
                      "value": ["procdump.exe", "procdump64.exe", "rundll32.exe", "powershell.exe", "pwsh.exe", "sqlservr.exe"]
                    },
                    {
                      "field": ".process.cmd_line",
                      "operator": "contains",
                      "value": "lsass"
                    }
                  ]
                },
                {
                  "field": ".process.cmd_line",
                  "operator": "contains",
                  "value": "comsvcs.dll"
                },
                {
                  "field": ".process.cmd_line",
                  "operator": "contains",
                  "value": "MiniDump"
                },
                {
                  "field": ".process.cmd_line",
                  "operator": "contains",
                  "value": "sekurlsa"
                },
                {
                  "field": ".process.cmd_line",
                  "operator": "contains",
                  "value": "mimikatz"
                },
                {
                  "type": "and",
                  "conditions": [
                    {
                      "field": ".file.path",
                      "operator": "contains",
                      "value": "lsass"
                    },
                    {
                      "field": ".file.path",
                      "operator": "contains",
                      "value": ".dmp"
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      "threshold": {
        "value": 1,
        "operator": "gte"
      },
      "group_by": [
        ".device.hostname",
        ".actor.user.name"
      ]
    }
  },
  "view": {
    "title": "Credential Dumping Attempt - LSASS Access Detected",
    "severity": "critical",
    "description": "User {{actor.user.name}} on {{device.hostname}} attempted to access LSASS process using {{process.name}} - likely credential dumping attack",
    "category": "Credential Access",
    "tags": [
      "credential-dumping",
      "lsass",
      "mimikatz",
      "post-exploitation",
      "lateral-movement"
    ],
    "mitre_attack": {
      "tactics": [
        "Credential Access",
        "Defense Evasion"
      ],
      "techniques": [
        "T1003.001 - OS Credential Dumping: LSASS Memory",
        "T1003.002 - OS Credential Dumping: Security Account Manager",
        "T1552.001 - Unsecured Credentials: Credentials In Files"
      ]
    },
    "fields_order": [
      "device.hostname",
      "actor.user.name",
      "process.name",
      "process.cmd_line",
      "file.path"
    ]
  },
  "controller": {
    "detection": {
      "suppression_window": "15m",
      "metadata": {
        "source": "builtin",
        "version": "1.0",
        "author": "TelHawk Security"
      }
    },
    "response": {
      "actions": [],
      "severity_threshold": "critical"
    }
  }
}
